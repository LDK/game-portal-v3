{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "0.0.0.0:8000"],
      "django": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Launch Vite",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev", "--", "--host"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal"
    },
    {
      "name": "Make Migrations",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["makemigrations"],
      "django": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Run Migrations",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["migrate"],
      "django": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Create Superuser",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["createsuperuser"],
      "django": true,
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Launch Django + Vite",
      "configurations": ["Launch Django", "Launch Vite"]
    }
  ]
}
